{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2020",
        "lib": [
            "ES2020"
        ],

        "rootDir": "./src",
        "outDir": "./out",

        "sourceMap": true,
        "removeComments": true,
        "forceConsistentCasingInFileNames": true,

        "strict": true,
        "noImplicitReturns": true,

        "paths": {
            "@qml-debug/*": [ "./src/*" ],
            "@qml-debug-root/*": [ "./*" ],
        }
    },
    "exclude": [
        "node_modules",
        ".vscode-test"
    ]
}
