{
    "compilerOptions": {
        "target": "es2018",
        "module": "commonjs",
        "rootDir": "source",

        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "build",
        "removeComments": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,

        "strict": true,
        "noImplicitReturns": true,
    }
}
