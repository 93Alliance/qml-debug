{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2020",
        "lib": [
            "ES2020"
        ],

        "rootDir": "src",
        "outDir": "out",

        "sourceMap": true,
        "declaration": true,

        "strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": false,
		"removeComments": false,
		"noUnusedLocals": true,
		"noImplicitThis": true,
		"inlineSourceMap": false,
		"preserveConstEnums": true,
		"strictNullChecks": true,
		"noUnusedParameters": false,
        "forceConsistentCasingInFileNames": true,

        "paths": {
            "@qml-debug/*": [ "./src/*" ],
            "@qml-debug-root/*": [ "./*" ],
        }
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "out",
        "dist"
    ]
}
