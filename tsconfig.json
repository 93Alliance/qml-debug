{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2020",
        "lib": [
            "ES2020"
        ],

        "rootDir": "./source",
        "outDir": "./out",

        "sourceMap": true,
        "removeComments": true,
        "forceConsistentCasingInFileNames": true,

        "strict": true,
        "noImplicitReturns": true,
    },
    "paths": {
		"@qml-debug": [ "./source" ],
        "@qml-debug-root": [ "." ],
	},
	"exclude": [
		"node_modules",
		".vscode-test"
	]
}
